<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.how2java.springboot.dao.UserDAO">
    <resultMap id="user" type="Map" >
        <result property="id" column="id" />
        <result property="role_id" column="role_id"  />
        <result property="username" column="username"  />
        <result property="password" column="password"  />
        <result property="nickname" column="nickname"  />
        <result property="phone" column="phone"  />
        <result property="realname" column="realname"  />
        <result property="birthday" column="birthday"  />
        <result property="head" column="head"  />
        <result property="picture" column="picture"  />
        <result property="address" column="address"  />
        <result property="personalized_signature" column="personalized_signature"  />
        <result property="balance" column="balance"  />
        <result property="bud_quantity" column="bud_quantity"  />
        <result property="corolla_quantity" column="corolla_quantity" />
        <result property="create_time" column="create_time"  />
        <result property="modify_time" column="modify_time"  />
        <result property="remark" column="remark"  />
    </resultMap>
    <select id="list" resultMap="user">
        SELECT * FROM g_user
    </select>

    <insert id="add" parameterType="Map" >
        insert into g_user ( id,username ) values (#{id},#{username})
    </insert>

    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM g_user WHERE id=#{id}
    </delete>

    <update id="updateById" parameterType="Map" >
        update g_user set phone=#{phone} where id=#{id}
    </update>

    <select id="findOneById" resultMap="user" parameterType="java.lang.String">
        SELECT * FROM g_user WHERE id=#{id}
    </select>

    <select id="findOneByUserNamePwd" resultMap="user" parameterType="Map">
        SELECT * FROM g_user WHERE username=#{username} AND password=#{password}
    </select>
</mapper>